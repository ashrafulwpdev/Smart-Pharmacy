<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/transparent">

    <!-- Image Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Product Details -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_product_name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/productQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_product_quantity"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

    <!-- Rating with Custom Icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/ratingIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/review_icon" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_rating_text"
            android:textSize="13sp"
            android:textColor="#3B82F6"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/productPriceDiscounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_discounted_price"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/productPriceOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_original_price"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/add_to_cart"
        android:textSize="14sp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />
</LinearLayout>