<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Color -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2A7A6" />

    <!-- Blurred Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blur_img"
        android:background="@android:color/transparent" />

    <!-- White Card -->
    <RelativeLayout
        android:id="@+id/otp_frame"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/login_bgframe"
        android:padding="16dp"
        android:elevation="6dp">

        <!-- OTP Icon -->
        <ImageView
            android:id="@+id/otp_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/otp_phone_icon" />

        <!-- Title -->
        <TextView
            android:id="@+id/otp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otp_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Verify Your Identity"
            android:textColor="#1F1F1F"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/otp_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otp_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp"
            android:textAlignment="center"
            android:maxWidth="280dp" />

        <!-- Instructions Text -->
        <TextView
            android:id="@+id/instructions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otp_subtitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="#555555"
            android:textSize="14sp"
            android:textAlignment="center"
            android:maxWidth="300dp" />

        <!-- OTP Input Boxes -->
        <LinearLayout
            android:id="@+id/otp_inputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructions_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <EditText
                android:id="@+id/otp_box1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/otp_box_interactive_bg"
                android:textColor="#1F1F1F"
                android:textSize="18sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@+id/otp_box2" />

            <EditText
                android:id="@+id/otp_box2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/otp_box_interactive_bg"
                android:textColor="#1F1F1F"
                android:textSize="18sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@+id/otp_box3" />

            <EditText
                android:id="@+id/otp_box3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/otp_box_interactive_bg"
                android:textColor="#1F1F1F"
                android:textSize="18sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@+id/otp_box4" />

            <EditText
                android:id="@+id/otp_box4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/otp_box_interactive_bg"
                android:textColor="#1F1F1F"
                android:textSize="18sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@+id/otp_box5" />

            <EditText
                android:id="@+id/otp_box5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/otp_box_interactive_bg"
                android:textColor="#1F1F1F"
                android:textSize="18sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusForward="@+id/otp_box6" />

            <EditText
                android:id="@+id/otp_box6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/otp_box_interactive_bg"
                android:textColor="#1F1F1F"
                android:textSize="18sp"
                android:gravity="center"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="1"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <!-- Verify Button with Lottie Animation -->
        <LinearLayout
            android:id="@+id/verify_container"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/otp_inputs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/login_btn_interactive_bg"
            android:enabled="true">

            <Button
                android:id="@+id/verifyBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Verify"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:stateListAnimator="@animator/button_elevation_anim"
                android:foreground="?android:attr/selectableItemBackground" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadingSpinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/loading_spinner"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />
        </LinearLayout>

        <!-- Resend Link -->
        <TextView
            android:id="@+id/resendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Didnâ€™t receive the code? Resend (30s)"
            android:textColor="#083EC9"
            android:textSize="14sp"
            android:clickable="true"
            android:enabled="true" />

        <!-- Email Reset Container -->
        <LinearLayout
            android:id="@+id/email_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructions_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/openEmailBtn"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:text="Open Email App"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/login_btn_interactive_bg" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>