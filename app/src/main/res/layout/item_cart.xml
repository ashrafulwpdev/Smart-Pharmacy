<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_image_background"
            android:clipToOutline="true" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daibza Diabetes Ayurvedic Capsule"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 13.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Quantity Controls -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_decrease_quantity"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_decrease_button"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Decrease Quantity" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:paddingHorizontal="8dp"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_increase_quantity"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/rounded_increase_button"
                app:backgroundTint="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="Increase Quantity" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>