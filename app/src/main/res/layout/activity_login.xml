<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Color (Full-screen, Base Layer) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2A7A6"/>

    <!-- Blurred Background Image (Full-screen, On Top of Background Color) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blur_img"
        android:background="@android:color/transparent" />

    <!-- White Card with Rounded Corners and Elevation (Centered, On Top of Everything) -->
    <RelativeLayout
        android:id="@+id/login_frame"
        android:layout_width="342dp"
        android:layout_height="570dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/login_bgframe"
        android:padding="16dp"
        android:elevation="6dp">

        <!-- Logo (Blue "D+" in Circle, Top Center) -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/pharmacyicon" />

        <!-- Welcome Back Title (Below Logo, Centered) -->
        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Welcome Back"
            android:textColor="#083EC9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle (Below Title, Centered) -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Please Enter Your Email or Mobile Number To Login"
            android:textColor="#1F1F1F"
            android:textSize="14sp"
            android:textAlignment="center" />

        <!-- Email/Mobile Number Input Field -->
        <EditText
            android:id="@+id/credInput"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/subtitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Enter Email or Mobile Number"
            android:textColor="#1F1F1F"
            android:textColorHint="#757575"
            android:textSize="16sp"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:inputType="text"
            android:autofillHints="email|username|phone" />

        <!-- Password Input Field with Eye Icon -->
        <RelativeLayout
            android:id="@+id/passwordContainer"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/credInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Password"
                android:textColor="#1F1F1F"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:inputType="textPassword"
                android:autofillHints="password" />

            <ImageView
                android:id="@+id/passwordToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_eye_off"
                android:contentDescription="Toggle password visibility" />
        </RelativeLayout>

        <!-- Remember Me Checkbox -->
        <CheckBox
            android:id="@+id/rememberMeCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Remember Me"
            android:textColor="#1F1F1F"
            android:textSize="14sp" />

        <!-- Interactive Login Button -->
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/rememberMeCheckbox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn_interactive_bg"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:stateListAnimator="@animator/button_elevation_anim"
            android:foreground="?android:attr/selectableItemBackground" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgotText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Forgot Password?"
            android:textColor="#083EC9"
            android:textSize="14sp"
            android:clickable="true"
            android:onClick="onForgotClick" />

        <!-- Signup Option -->
        <TextView
            android:id="@+id/signupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Donâ€™t have an account? Sign Up"
            android:textColor="#1F1F1F"
            android:textSize="14sp"
            android:clickable="true"
            android:onClick="onSignupClick" />

        <!-- Social Login Options -->
        <LinearLayout
            android:id="@+id/socialOpts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/githublogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/github_ic"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/googleLogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_ic"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/facebookLogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fb_ic" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>