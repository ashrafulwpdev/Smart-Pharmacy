<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Color -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2A7A6" />

    <!-- Blurred Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_blur_img" />

    <!-- White Card -->
    <RelativeLayout
        android:id="@+id/login_frame"
        android:layout_width="342dp"
        android:layout_height="585dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/login_bgframe"
        android:elevation="6dp"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/pharmacyicon" />

        <!-- Welcome Back Title -->
        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Welcome Back"
            android:textColor="#083EC9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Please Enter Your Email or Mobile Number To Login"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="14sp" />

        <!-- Email/Mobile Number Input Field -->
        <EditText
            android:id="@+id/credInput"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/subtitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:autofillHints="email|username|phone"
            android:background="@drawable/edittext_bg"
            android:hint="Enter Email or Mobile Number"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#1F1F1F"
            android:textColorHint="#757575"
            android:textSize="16sp" />

        <!-- Password Input Field with Eye Icon -->
        <RelativeLayout
            android:id="@+id/passwordContainer"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/credInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="password"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#1F1F1F"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/passwordToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="Toggle password visibility"
                android:src="@drawable/ic_eye_off" />
        </RelativeLayout>

        <!-- Remember Me and Forgot Password -->
        <LinearLayout
            android:id="@+id/optionsLayout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rememberMeCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#083EC9"
                android:text="Remember Me"
                android:textColor="#1F1F1F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forgotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="end"
                android:onClick="onForgotClick"
                android:text="Forgot Password?"
                android:textColor="#083EC9"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Interactive Login Button -->
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/optionsLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn_interactive_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@animator/button_elevation_anim"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Signup Option -->
        <TextView
            android:id="@+id/signupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:onClick="onSignupClick"
            android:text="Donâ€™t have an account? Sign Up"
            android:textColor="#1F1F1F"
            android:textSize="14sp" />

        <!-- Older-Style Interactive Social Login Options -->
        <LinearLayout
            android:id="@+id/socialOpts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/githublogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/github_ic" />

            <ImageView
                android:id="@+id/googleLogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/google_ic" />

            <ImageView
                android:id="@+id/facebookLogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/fb_ic" />
        </LinearLayout>

        <!-- Lottie Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingSpinner"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:lottie_autoPlay="true" />
    </RelativeLayout>
</RelativeLayout>