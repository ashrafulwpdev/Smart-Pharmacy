<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_arrow_ic"
            android:background="@drawable/arrow_bg_circle"
            android:contentDescription="Back"
            android:enabled="false" />

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/backButton"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:id="@+id/profileImageContainer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/profileTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/circ_border_profile">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                android:contentDescription="Profile Picture" />

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="14dp"
                android:contentDescription="Upload Photo"
                android:src="@drawable/camera_ic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/displayFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="David Jon"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_below="@id/profileImageContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/displayPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 (852) 65 52 435"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_below="@id/displayFullName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Full name"
            android:text="David Jon"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_bg_premium"
            android:layout_below="@id/displayPhoneNumber"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/genderBirthdayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fullName"
            android:layout_marginTop="16dp">

            <Spinner
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:background="@drawable/edittext_bg_premium"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/birthday"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Birthday"
                android:text="05-01-1998"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edittext_bg_premium"
                android:focusable="false"
                android:clickable="true"
                android:inputType="date" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/phoneContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/genderBirthdayLayout"
            android:layout_marginTop="16dp">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="@drawable/edittext_bg_premium"
                android:layout_marginEnd="0dp" />

            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/ccp"
                android:layout_marginStart="6dp"
                android:hint="Phone number"
                android:text="1759263000"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/edittext_bg_premium"
                android:layout_toStartOf="@+id/placeholder" />

            <View
                android:id="@+id/placeholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:text="Davidjon@gmail.com"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_bg_premium"
            android:layout_below="@id/phoneContainer"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="User name"
            android:text="@parves"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_bg_premium"
            android:layout_below="@id/email"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:textSize="16sp"
            android:background="@drawable/login_btn_interactive_bg"
            android:textColor="#FFFFFF"
            android:stateListAnimator="@animator/button_elevation_anim"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_below="@id/username"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

    </RelativeLayout>
</ScrollView>