<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_white_background"
    android:gravity="center">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="Success"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDER PLACED SUCCESSFULLY"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU HAVE SUCCESSFULLY PLACED YOUR ORDER"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Horizontal Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- View Orders Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewOrdersButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="View Orders"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_interactive_bg"
            android:paddingVertical="12dp"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Done Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/doneButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_interactive_bg"
            android:paddingVertical="12dp"
            app:iconGravity="start"
            app:iconPadding="8dp" />

    </LinearLayout>

</LinearLayout>
