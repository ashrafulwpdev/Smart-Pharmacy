<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <solid android:color="#E0E0E0" /> <!-- Light gray for pressed state -->
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Light grey border -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <solid android:color="#F5F5F5" /> <!-- Very light gray for focused state -->
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Light grey border -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <solid android:color="#EEEEEE" /> <!-- Light gray for disabled state -->
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Light grey border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <solid android:color="#FFFFFF" /> <!-- Pure white for default state -->
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Light grey border -->
        </shape>
    </item>
</selector>