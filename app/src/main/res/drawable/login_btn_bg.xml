<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#200083F2"> <!-- Ripple color (semi-transparent version of #083EC9 blue) -->
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" /> <!-- Rounded corners -->
                    <solid android:color="#0057B7" /> <!-- Darker blue for pressed state -->
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" /> <!-- Rounded corners -->
                    <solid android:color="#0066CC" /> <!-- Slightly lighter blue for focused state -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" /> <!-- Rounded corners -->
                    <solid android:color="#083EC9" /> <!-- Default blue background -->
                </shape>
            </item>
        </selector>
    </item>
</ripple>