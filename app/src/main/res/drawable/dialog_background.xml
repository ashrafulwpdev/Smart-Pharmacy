<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Shadow layer (behind the main background) -->
  <item
      android:left="4dp"
      android:right="4dp"
      android:top="4dp"
      android:bottom="4dp">
    <shape android:shape="rectangle">
      <solid android:color="#40000000"/> <!-- Semi-transparent gray for shadow -->
      <corners android:radius="24dp"/> <!-- Slightly larger radius for shadow -->
    </shape>
  </item>

  <!-- Main dialog background -->
  <item>
    <shape android:shape="rectangle">
      <!-- Subtle gradient from white to light gray -->
      <gradient
          android:startColor="#FFFFFF"
          android:endColor="#F5F5F5"
          android:angle="90"/>
      <!-- Border for subtle outline -->
      <stroke
          android:width="1dp"
          android:color="#D0D0D0"/> <!-- Slightly darker gray -->
      <!-- Rounded corners -->
      <corners android:radius="20dp"/>
    </shape>
  </item>
</layer-list>